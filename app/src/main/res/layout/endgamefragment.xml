<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa958f3f"
    >

    <TextView
        android:id="@+id/endresultText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Result"
        android:textSize="44sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/continueEndBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/continuu"
        android:text="Continue"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/scoredTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endresultText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Score: "
        android:textSize="28sp" />

    <TextView
        android:id="@+id/newRecordTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Record!"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/scoredTxt"
        android:layout_toLeftOf="@+id/scoredTxt"
        android:layout_toStartOf="@+id/scoredTxt" />

    <EditText
        android:id="@+id/nameinputTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/name_hint"
        android:inputType="textPersonName"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_alignBaseline="@+id/newRecordTxt"
        android:layout_alignBottom="@+id/newRecordTxt"
        android:layout_toRightOf="@+id/newRecordTxt"
        android:layout_toEndOf="@+id/newRecordTxt" />

</RelativeLayout>