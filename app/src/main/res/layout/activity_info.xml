<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="com.fullrune.areashiftertwo.CONTROL.InfoActivity"

    android:background="@drawable/gradient5">
    <!--android:background="@drawable/gradient"-->

    <Button
        android:id="@+id/backbuttoninfo"
        android:layout_width="188dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/roundedbutton"
        android:padding="10dp"
        android:text="BACK"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textInfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="Gameplay"
        android:textColor="@color/yellow"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:layout_alignEnd="@+id/textInfo1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="77dp"
        android:layout_marginEnd="-113dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="39dp"
                    android:layout_marginTop="15dp"
                    android:text="Time:"
                    android:textColor="@color/yellow"
                    android:textSize="24sp" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>