<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyThemeDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#032100</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/gray2</item>
        <item name="android:bottomDark">@color/gray2</item>
        <item name="android:bottomMedium">@color/gray2</item>
        <item name="android:centerBright">@color/gray2</item>
        <item name="android:centerDark">@color/gray2</item>
        <item name="android:centerMedium">@color/gray2</item>
        <item name="android:fullBright">@color/gray2</item>
        <item name="android:fullDark">@color/gray2</item>
        <item name="android:topBright">@color/gray2</item>
        <item name="android:topDark">@color/gray2</item>
        <item name="android:background">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

</resources>
