<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="SAVE" />

    <Button
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Back" />

    <Button
        android:id="@+id/lvl1btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backbtn"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_toEndOf="@+id/backbtn"
        android:layout_toRightOf="@+id/backbtn"
        android:text="1" />

    <Button
        android:id="@+id/lvl4btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lvl1btn"
        android:layout_alignStart="@+id/lvl1btn"
        android:layout_below="@+id/lvl1btn"
        android:layout_marginTop="39dp"
        android:text="4" />

    <Button
        android:id="@+id/lvl2btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lvl1btn"
        android:layout_centerHorizontal="true"
        android:text="2" />

    <Button
        android:id="@+id/lvl3btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lvl2btn"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/lvl2btn"
        android:layout_toRightOf="@+id/lvl2btn"
        android:text="3" />

    <Button
        android:id="@+id/lvl5btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lvl4btn"
        android:layout_alignBottom="@+id/lvl4btn"
        android:layout_alignLeft="@+id/lvl3btn"
        android:layout_alignStart="@+id/lvl3btn"
        android:text="5" />

    <Button
        android:id="@+id/lvl6btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lvl4btn"
        android:layout_alignStart="@+id/lvl4btn"
        android:layout_below="@+id/lvl4btn"
        android:layout_marginTop="34dp"
        android:text="6" />

    <Button
        android:id="@+id/lvl7btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lvl6btn"
        android:layout_alignBottom="@+id/lvl6btn"
        android:layout_alignLeft="@+id/lvl2btn"
        android:layout_alignStart="@+id/lvl2btn"
        android:text="7" />

    <Button
        android:id="@+id/lvl8btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lvl7btn"
        android:layout_alignBottom="@+id/lvl7btn"
        android:layout_alignLeft="@+id/lvl5btn"
        android:layout_alignStart="@+id/lvl5btn"
        android:text="8" />
</RelativeLayout>